using System.Linq;

namespace Tdl2Json
{
  [Record]
  public class TransformationContext
  {
    public RootNamespace : DotNet.NamespaceSymbol { get; }

    public Comments : CommentBag { get; }

    public Messages : CompilerMessageBag { get; }

