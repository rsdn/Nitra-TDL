{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"sourceMap": true,
		"strict": true,
		"lib": ["es6", "es2019" ],
		"rootDir": "src",
		"noUnusedLocals": true,
		"moduleResolution": "node",
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}
